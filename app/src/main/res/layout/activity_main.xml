<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!--系统首页-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Et_name"
            android:hint="输入名字查询"
            android:textSize="@dimen/label_size"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:id="@+id/query"
            android:textSize="@dimen/btn_add_size"
            android:text="查询"
            android:background="@drawable/bg_circle_blue"/>
    </LinearLayout>
<!--    android:layout_marginTop="@dimen/margin_fix"-->


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:background="#669999"
            android:textStyle="bold"
            android:text="@string/no"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:background="#336666"
            android:textStyle="bold"
            android:text="@string/name"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:background="#669999"
            android:textStyle="bold"

            android:text="@string/phone"/>
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:divider="#CCCCCCCC"
        android:dividerHeight="5dp"

        android:id="@+id/lv_contact">
        
    </ListView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_fix"
        android:background="@color/btn_blue"
        android:text="添加联系人"
        android:textSize="@dimen/btn_add_size"
        android:id="@+id/btn_add" />


</LinearLayout>
